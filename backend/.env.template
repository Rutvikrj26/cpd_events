# =============================================================================
# CPD Events Backend - Environment Template
# =============================================================================
# Copy this file to .env.dev or .env.prod and fill in real values
# NEVER commit .env.dev or .env.prod to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Django Core Settings
# -----------------------------------------------------------------------------
# Generate new Django secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-django-secret-key-here-generate-a-new-one

# Generate new encryption key: python -c "import base64; import os; print(base64.b64encode(os.urandom(32)).decode())"
ENCRYPTION_KEY=your-base64-encryption-key-here

# Settings module (config.settings.development or config.settings.production)
DJANGO_SETTINGS_MODULE=config.settings.development

# Debug mode (true for development, false for production)
DEBUG=true

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# For development, you can use SQLite (no config needed)
# For production, use PostgreSQL:
DB_NAME=cpd_events
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# -----------------------------------------------------------------------------
# Redis Cache (optional)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# GCP Settings
# -----------------------------------------------------------------------------
GCP_PROJECT_ID=your-gcp-project-id
GCP_LOCATION=us-central1
GCP_QUEUE_NAME=default
GCP_SA_EMAIL=service-account@your-project.iam.gserviceaccount.com
GCS_BUCKET_NAME=your-bucket-name

# Cloud Tasks Sync Mode (true for development, false for production)
CLOUD_TASKS_SYNC=true

# GCP Emulators (for local development)
CLOUD_TASKS_EMULATOR_HOST=localhost:8123
GCS_EMULATOR_HOST=localhost:9023

# -----------------------------------------------------------------------------
# Stripe Payment Integration (https://dashboard.stripe.com/apikeys)
# -----------------------------------------------------------------------------
# For development, use TEST keys (sk_test_...)
# For production, use LIVE keys (sk_live_...)
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# -----------------------------------------------------------------------------
# Ticketing Fees Configuration
# -----------------------------------------------------------------------------
# Service fee (your platform's commission)
TICKETING_SERVICE_FEE_PERCENT_CAD=3.0
TICKETING_SERVICE_FEE_FIXED_CAD=0.99
TICKETING_PROCESSING_FEE_PERCENT_CAD=2.9
TICKETING_PROCESSING_FEE_FIXED_CAD=0.30

TICKETING_SERVICE_FEE_PERCENT_USD=3.0
TICKETING_SERVICE_FEE_FIXED_USD=0.99
TICKETING_PROCESSING_FEE_PERCENT_USD=2.9
TICKETING_PROCESSING_FEE_FIXED_USD=0.30

# -----------------------------------------------------------------------------
# Zoom Integration (https://marketplace.zoom.us/)
# -----------------------------------------------------------------------------
ZOOM_CLIENT_ID=your_zoom_client_id
ZOOM_CLIENT_SECRET=your_zoom_client_secret
ZOOM_REDIRECT_URI=http://localhost:5173/integrations/zoom/callback
ZOOM_WEBHOOK_SECRET=your_zoom_webhook_secret

# -----------------------------------------------------------------------------
# Google OAuth (https://console.cloud.google.com/apis/credentials)
# -----------------------------------------------------------------------------
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback/

# -----------------------------------------------------------------------------
# Email Configuration
# -----------------------------------------------------------------------------
# Brevo (recommended - https://app.brevo.com/)
BREVO_API_KEY=your_brevo_api_key

# Or Mailgun (alternative)
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=your_mailgun_domain.mailgun.org
MAILGUN_SMTP_LOGIN=your_smtp_login
MAILGUN_SMTP_PASSWORD=your_smtp_password
MAILGUN_API_BASE_URL=https://api.mailgun.net/v3

# Email settings
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
SERVER_EMAIL=server@yourdomain.com

# -----------------------------------------------------------------------------
# URLs
# -----------------------------------------------------------------------------
SITE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:5173
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost:5173

# -----------------------------------------------------------------------------
# Sentry Error Tracking (https://sentry.io/)
# -----------------------------------------------------------------------------
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development

# Release version (for Sentry tracking)
GIT_COMMIT_SHA=0.1.0

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
DB_LOG_LEVEL=WARNING

# -----------------------------------------------------------------------------
# Admin Configuration
# -----------------------------------------------------------------------------
ADMIN_EMAIL=admin@yourdomain.com

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. NEVER commit this file with real values to version control
# 2. Rotate all secrets when moving to production
# 3. Use strong, randomly generated keys for SECRET_KEY and ENCRYPTION_KEY
# 4. Keep Stripe test keys separate from live keys
# 5. Set up proper secret management (AWS Secrets Manager, GCP Secret Manager)
# =============================================================================
