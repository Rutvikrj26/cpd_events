# GCP Project Configuration
project_id  = "your-project-id"
region      = "us-central1"
environment = "dev"
app_name    = "cpd-events"

# Database Configuration
db_tier              = "db-f1-micro"  # Smallest for dev
db_name              = "cpd_events"
db_user              = "cpd_user"
db_disk_size         = 10
db_high_availability = false  # Disabled for dev
db_max_connections   = "100"

# Networking
vpc_cidr           = "10.0.0.0/24"
vpc_connector_cidr = "10.8.0.0/28"

# Cloud Run Configuration
backend_image        = "gcr.io/your-project-id/cpd-backend:latest"
cloud_run_cpu        = "1"
cloud_run_memory     = "512Mi"
cloud_run_concurrency = 80
cloud_run_timeout    = 300

# Auto-scaling
min_instances = 0  # Scale to zero for dev
max_instances = 10

# Cloud Tasks
task_queue_max_concurrent = 100
task_queue_max_rate       = 10
cloud_tasks_sync          = true

# CORS (for development)
cors_origins = [
  "http://localhost:3000",
  "http://localhost:5173",
  "https://dev.yourdomain.com"
]

# Application URLs
site_url     = ""
frontend_url = "http://localhost:5173"

# Email configuration
default_from_email = "info@accredit.store"
server_email       = "server@accredit.store"
admin_email        = "admin@accredit.store"
smtp_domain        = ""
smtp_server        = "smtp-relay.brevo.com"
smtp_port          = 587

# Billing overrides (optional)
platform_fee_percent  = 2.0
ticketing_service_fee_percent_cad = 3.0
ticketing_service_fee_fixed_cad = 0.99
ticketing_processing_fee_percent_cad = 2.9
ticketing_processing_fee_fixed_cad = 0.30
ticketing_service_fee_percent_usd = 3.0
ticketing_service_fee_fixed_usd = 0.99
ticketing_processing_fee_percent_usd = 2.9
ticketing_processing_fee_fixed_usd = 0.30
billing_default_plan  = "attendee"
# Frontend build-time variables (used by CLI deploy)
frontend_google_maps_api_key     = ""
frontend_stripe_publishable_key  = ""
